/* v1.2 columns + centering */
.mosaic-gallery{ margin:0 auto; max-width:100%; --cols:3; }
@media (max-width:1024px){ .mosaic-gallery{ --cols:2; } }
@media (max-width:640px){  .mosaic-gallery{ --cols:1; } }

.mosaic-sizer,
.mosaic-item{
  width: calc( (100% - (var(--cols) - 1) * var(--gap,12px)) / var(--cols) );
}
.mosaic-item{ margin: 0 0 var(--gap,12px) 0; }
.is-hidden{ display:none; } /* страховка */

/* v1.2 grid widths */
.mosaic-sizer,.mosaic-item{width:33.333%;}
@media (max-width: 992px){ .mosaic-sizer,.mosaic-item{width:50%;} }
@media (max-width: 576px){ .mosaic-sizer,.mosaic-item{width:100%;} }

