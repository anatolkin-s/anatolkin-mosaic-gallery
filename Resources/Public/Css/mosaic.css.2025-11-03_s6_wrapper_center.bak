/* Masonry gallery — clean v1.3 */
.mosaic-gallery{ margin:0 auto; padding: var(--gap,12px); }

/* 3/2/1 колонки с учётом двух промежутков (gutter) */
.mosaic-sizer, .mosaic-item{ width: calc((100% - 2*var(--gap,12px)) / 3); box-sizing:border-box; }
@media (max-width:1024px){ .mosaic-sizer, .mosaic-item{ width: calc((100% - 1*var(--gap,12px)) / 2); } }
@media (max-width:640px){  .mosaic-sizer, .mosaic-item{ width: 100%; } }

.mosaic-item{ margin: 0 0 var(--gap,12px) 0; }
.mosaic-item img{
  display:block; width:100%; height:auto; box-sizing:border-box;
  border-radius: var(--radius, 6px);
  border: var(--frame-width,0px) var(--frame-style,solid) var(--frame-color,transparent);
}

/* фон контейнера/плиток (регистронезависимые селекторы) */
.mosaic-gallery[data-apply-bg="container" i],
.mosaic-gallery[data-apply-bg="both" i]{ background: var(--bg,transparent); }
.mosaic-gallery[data-apply-bg="tiles" i] .mosaic-item img,
.mosaic-gallery[data-apply-bg="both" i] .mosaic-item img{ background: var(--bg,transparent); }

.mosaic-actions{ text-align:center; margin: 8px 0 4px; }
.mosaic-load-more{ display:inline-block; padding:.6rem 1rem; border-radius:.5rem;
  border:1px solid rgba(0,0,0,.15); background:#fff; cursor:pointer; }
.mosaic-load-more:hover{ background:#f7f7f7; }

.is-hidden{ display:none !important; }
